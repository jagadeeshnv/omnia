[Unit]
Description=Pulp Qualdlet Container
[Container]
Image=docker.io/pulp/pulp:latest
Exec=/init
ContainerName={{ pulp_container_name }}
# Volumes
{% for vol in volumes_https %}
Volume={{ vol }}
{% endfor %}

# Environment Variables
Environment=PULP_HTTPS=true
Environment=PULP_TLS_CERT=/etc/pulp/certs/pulp.crt
Environment=PULP_TLS_KEY=/etc/pulp/certs/pulp.key
# HTTPS Port mapping
PublishPort={{ pulp_container_port_https }}:443
[Service]
Restart=always
[Install]
WantedBy=multi-user.target default.target